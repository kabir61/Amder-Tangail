<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3079327"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textColor="#ed1212"
                android:textSize="35sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:src="@drawable/map"
                android:contentDescription="@string/toodo" />
            <Button
                android:id="@+id/Button1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="IntroID"
                android:text="@string/introduction"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="HistoID"
                android:text="@string/historical_place"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/Button3"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="FamousID"
                android:text="@string/famous_person"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/Button4"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="ImageID"
                android:text="@string/images"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/Button5"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="UpazilaID"
                android:text="@string/upa"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic" />
            <Button
                android:id="@+id/Button6"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="InstituteID"
                android:text="@string/Ins"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>
            <Button
                android:id="@+id/Button7"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="mapID"
                android:text="@string/map"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>
            <Button
                android:id="@+id/Button8"
                android:layout_width="300dp"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="AboutID"
                android:text="@string/about"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="italic"/>
            <Button
                android:id="@+id/Button9"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_margin="3dp"
                android:textAllCaps="false"
                android:background="#f3079327"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>